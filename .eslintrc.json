{
  "root": true,
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended"
  ],
  "rules": {
    "react/jsx-no-undef": [true, { "allowGlobals": true }]
  }
}