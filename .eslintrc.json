{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "react/jsx-no-undef": [2, { "allowGlobals": true }],
    "no-debugger": "warn",
    "semi": [2, "always"]
  },
  "settings": {
    "react": {
      "version": "16.5.1"
    }
  }
}
